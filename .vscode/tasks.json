{
  "version": "2.0.0",
  "tasks": [
    {
      // automatically prepare the workspace when it opens
      "label": "prepare the workspace",
      "type": "shell",
      "dependsOn": ["git: pull", "npm: install", "npm: start a project"],
      "dependsOrder": "sequence",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "revealProblems": "onProblem"
      },
      "problemMatcher": []
    },
    {
      "label": "npm: install",
      "group": "build",
      "type": "shell",
      "command": "npm i -f",
      "problemMatcher": [
        // {
        // 	"pattern": [
        // 		{
        // 			"regexp": "^npm ERR! (.*)$",
        // 			"file": 1,
        // 			"kind": "file",
        // 		},
        // 		{
        // 			"regexp": "^npm ERR! (.*)$",
        // 			"message": 1,
        // 			"loop": true
        // 		}
        // 	]
        // }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "npm: start a project",
      "group": "build",
      "type": "shell",
      // todo: support start:dev
      "command": "npm start --prefix=projects/${input:project}",
      "problemMatcher": []
    },
    {
      "label": "git: pull",
      "group": "build",
      "type": "shell",
      "command": "git pull"
    }
  ],
  "presentation": {
    "reveal": "always",
    "panel": "dedicated",
    "revealProblems": "onProblem"
  },
  "inputs": [
    {
      "id": "project",
      "description": "the project name",
      "type": "pickString",
      "options": ["ngx-cms", "forms"]
    }
  ]
}
